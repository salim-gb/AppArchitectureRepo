<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_medium_30">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/dimen_large_100"
        android:layout_height="@dimen/dimen_large_100"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_large_50"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_forks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small_12"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        tools:text="@string/app_name" />
</LinearLayout>